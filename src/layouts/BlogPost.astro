---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'] & { number: string };

const { title, description, pubDate, updatedDate, number } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.prose {
				max-width: 65ch;
				margin: 0 auto;
			}

			.header {
				margin-bottom: 2rem;
			}

			.post-number {
				display: block;
				font-size: 1.5rem;
				font-weight: 800;
				color: var(--color-text-secondary);
				margin-bottom: 0.5rem;
			}

			.header h1 {
				margin-bottom: 0.5rem;
				line-height: 1.2;
			}

			.date {
				color: var(--color-text-secondary);
				font-size: 0.9rem;
			}

			.last-updated {
				font-style: italic;
				margin-top: 0.25rem;
			}

			.content :global(h2) {
				margin-top: 2.5rem;
				margin-bottom: 1rem;
			}

			.content :global(h3) {
				margin-top: 2rem;
				margin-bottom: 0.75rem;
			}

			.content :global(ul),
			.content :global(ol) {
				margin-bottom: 1.5rem;
				padding-left: 1.5rem;
			}

			.content :global(li) {
				margin-bottom: 0.5rem;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="prose">
				<div class="header">
					<span class="post-number">{number}</span>
					<h1>{title}</h1>
					<div class="date">
						<FormattedDate date={pubDate} />
						{updatedDate && (
							<div class="last-updated">
								Last updated on <FormattedDate date={updatedDate} />
							</div>
						)}
					</div>
				</div>
				<div class="content">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
