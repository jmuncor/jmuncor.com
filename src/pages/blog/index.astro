---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const featuredPost = posts[0];
const otherPosts = posts.slice(1);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 100%;
				max-width: 1024px;
				margin: 0 auto;
				padding: 3em 1em;
			}
			
			.title-section {
				margin-bottom: 3rem;
				text-align: center;
			}
			
			.title-section h1 {
				font-size: 3rem;
				margin-bottom: 0.5rem;
			}

			.grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 2.5rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}

			.featured-card {
				grid-column: span 2;
				margin-bottom: 2rem;
			}
			
			.card a {
				text-decoration: none;
				display: block;
				transition: transform 0.2s ease;
			}
			
			.card a:hover {
				transform: translateY(-4px);
			}
			
			.card img {
				width: 100%;
				height: auto;
				aspect-ratio: 16 / 9;
				object-fit: cover;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				margin-bottom: 1rem;
			}

			.featured-card img {
				aspect-ratio: 21 / 9;
			}
			
			.card .title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.2;
				font-size: 1.5rem;
			}

			.featured-card .title {
				font-size: 2.5rem;
			}
			
			.card .date {
				margin: 0.5rem 0 0;
				color: rgb(var(--gray));
				font-size: 0.9rem;
			}

			@media (max-width: 720px) {
				.grid {
					grid-template-columns: 1fr;
				}
				.featured-card {
					grid-column: span 1;
				}
				.title-section h1 {
					font-size: 2.2rem;
				}
				.featured-card .title {
					font-size: 1.8rem;
				}
				.featured-card img {
					aspect-ratio: 16 / 9;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="title-section">
				<h1>Latest Posts</h1>
				<p>Sharing my thoughts on technology, software, and life.</p>
			</section>
			<section>
				<ul class="grid">
					{featuredPost && (
						<li class="card featured-card">
							<a href={`/blog/${featuredPost.id}/`}>
								{featuredPost.data.heroImage && (
									<Image 
										src={featuredPost.data.heroImage} 
										alt=""
										width={1024}
										height={512}
										loading="eager"
									/>
								)}
								<h2 class="title">{featuredPost.data.title}</h2>
								<p class="date">
									<FormattedDate date={featuredPost.data.pubDate} />
								</p>
							</a>
						</li>
					)}
					{
						otherPosts.map((post) => (
							<li class="card">
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image 
											src={post.data.heroImage} 
											alt=""
											width={720}
											height={405} 
										/>
									)}
									<h2 class="title">{post.data.title}</h2>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
