---
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<a href="/" class="logo">{SITE_TITLE}</a>
		<div class="nav-right">
			<a href="https://x.com/jmuncor" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Follow on X</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20">
					<path fill="currentColor" d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.055-4.425 5.055H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633Z"></path>
				</svg>
			</a>
			<a href="https://github.com/jmuncor" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Go to GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20">
					<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
				</svg>
			</a>
			<a href="https://linkedin.com/in/jmuncor" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Connect on LinkedIn</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20">
					<path fill="currentColor" d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.343 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"></path>
				</svg>
			</a>
			<button id="theme-toggle" aria-label="Toggle theme">
				<svg class="sun-icon" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
					<circle cx="12" cy="12" r="5"></circle>
					<line x1="12" y1="1" x2="12" y2="3"></line>
					<line x1="12" y1="21" x2="12" y2="23"></line>
					<line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
					<line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
					<line x1="1" y1="12" x2="3" y2="12"></line>
					<line x1="21" y1="12" x2="23" y2="12"></line>
					<line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
					<line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
				</svg>
				<svg class="moon-icon" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
				</svg>
			</button>
		</div>
	</nav>
</header>

<script>
	const toggle = document.getElementById('theme-toggle');

	toggle?.addEventListener('click', () => {
		document.documentElement.classList.toggle('dark');
	});
</script>

<style>
	header {
		padding: 0 2rem;
		position: sticky;
		top: 0;
		background: var(--color-bg);
		z-index: 100;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 64px;
	}

	.logo {
		text-decoration: none;
		color: var(--color-text);
		font-weight: 800;
		font-size: 1.1rem;
		letter-spacing: -0.5px;
	}

	.nav-right {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.nav-right a {
		color: var(--color-text-secondary);
		text-decoration: none;
		display: flex;
		align-items: center;
	}

	.nav-right a:hover {
		color: var(--color-text);
	}

	#theme-toggle {
		background: none;
		border: none;
		cursor: pointer;
		padding: 0;
		color: var(--color-text-secondary);
		display: flex;
		align-items: center;
	}

	#theme-toggle:hover {
		color: var(--color-text);
	}

	/* Show sun in dark mode, moon in light mode */
	.sun-icon {
		display: none;
	}

	.moon-icon {
		display: block;
	}

	:global(html.dark) .sun-icon {
		display: block;
	}

	:global(html.dark) .moon-icon {
		display: none;
	}

	@media (max-width: 720px) {
		header {
			padding: 0 1.5rem;
		}

		.nav-right {
			gap: 0.75rem;
		}
	}
</style>
